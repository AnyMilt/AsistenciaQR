<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AsistenciaQR.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Vista="clr-namespace:AsistenciaQR.Views"
    xmlns:local="clr-namespace:AsistenciaQR"
    Title="AsistenciaQR"
    FlyoutBehavior="Flyout">

    <FlyoutItem Title="Escanear Asistencia" Icon="home_icon.png">
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate Vista:ScannerPage}"
        Route="ScannerPage" />
    </FlyoutItem>

    <FlyoutItem Title="Historial" Icon="historial_icon.png">
        <ShellContent
        Title="Historial"
        ContentTemplate="{DataTemplate Vista:HistorialPage}"
        Route="HistorialPage" />
    </FlyoutItem>



</Shell>
