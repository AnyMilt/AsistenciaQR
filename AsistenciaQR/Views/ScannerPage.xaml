<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
             xmlns:converters="clr-namespace:AsistenciaQR.Converters"
             x:Class="AsistenciaQR.Views.ScannerPage"
             Title="Registro de Asistencia"
             BackgroundColor="#F5F5F5">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converters:BoolToTextConverter x:Key="BoolToTextConverter" />

            <!-- ðŸŽ¨ Estilo global para botones -->
            <Style TargetType="Button">
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="HeightRequest" Value="48"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto" Padding="16">

        <!-- Encabezado -->
        <VerticalStackLayout Grid.Row="0" Spacing="4" HorizontalOptions="Center">
            <Label Text="Escaneo de Asistencia"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#1E88E5"
                   HorizontalOptions="Center"/>
            <Label Text="{Binding HoraActual}"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#43A047"
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>

        <!-- EscÃ¡ner QR -->
        <Border Grid.Row="1"
                Stroke="#E0E0E0"
                StrokeThickness="1"
                Background="Black"
                HorizontalOptions="Fill"
                VerticalOptions="Fill"
                Margin="0,10">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="12"/>
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.2" Offset="2,2" Radius="6"/>
            </Border.Shadow>
            <zxing:CameraBarcodeReaderView
                x:Name="cameraView"
                BarcodesDetected="OnBarcodeDetected"
                IsDetecting="{Binding EscaneoActivo}"
                HorizontalOptions="Fill"
                VerticalOptions="Fill"/>
        </Border>

        <!-- Estado y controles -->
        <VerticalStackLayout Grid.Row="2" Spacing="12" HorizontalOptions="Center">
            <Label Text="{Binding EstadoMensaje}"
                   FontSize="14"
                   TextColor="#757575"
                   HorizontalOptions="Center"/>

            <Button Text="Reactivar escaneo"
                    Command="{Binding ReactivarEscaneoCommand}"
                    IsVisible="{Binding EscaneoActivo, Converter={StaticResource InverseBoolConverter}}"
                    BackgroundColor="#9E9E9E"
                    WidthRequest="200"/>

            <Button Text="ðŸ”„ Sincronizar asistencias"
                    Command="{Binding SincronizarCommand}"
                    BackgroundColor="#1976D2"
                    WidthRequest="220"/>

        </VerticalStackLayout>

        <!-- AnimaciÃ³n de check âœ… -->
        <Label x:Name="CheckAnimacion"
               Text="âœ…"
               FontSize="72"
               Opacity="0"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Scale="0.5"
               TextColor="Green"
               ZIndex="10"/>
    </Grid>
</ContentPage>